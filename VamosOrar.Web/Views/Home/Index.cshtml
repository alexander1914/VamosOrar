@model IEnumerable<VamosOrar.Data.Models.PedidosOracoes>
@using VamosOrar.Data.Models

@{
    ViewBag.Title = "Home Page";
}

@functions{
    public int totalSalvacao()
    {
        List<PedidosOracoes> pedidosOracoes = new List<PedidosOracoes>();

        foreach (var item in Model)
        {
            pedidosOracoes.Add(item);
        }

        var result = pedidosOracoes.Count(p => p.Causas == TiposCausas.Salvação);

        return result;
    }

