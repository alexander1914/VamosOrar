<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Vamos Orar</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css" rel="stylesheet" />    
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #0D47A1;">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#">Vamos Orar&nbsp;<i class="fas fa-praying-hands"></i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-expanded="false" aria-label="Toggle navigation">                    
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="/Home/Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Oracoes/Index">Pedidos Oração</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/SOS">S.O.S</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Envolvidos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @if (TempData["Message"] != null)
        {
            <div id="alert" class="alert alert-success">
                @TempData["Message"]
            </div>            
        }
        <br />
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center text-white" style="background-color: #0D47A1;">
        <!-- Grid container -->
        <div class="container pt-4">
            <!-- Section: Social media -->
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1"
                   href="#!"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <!-- Instagram -->
                <a class="btn btn-link btn-floating btn-lg text-dark m-1"
                   href="#!"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-instagram"></i>
                </a>
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center text-white p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            ©@DateTime.Now.Year - Vamos Orar
            <br />
            <a target="_blank" href="https://www.linkedin.com/in/alexander-albuquerque-oliveira-5b2013104" class="btn-floating btn-li mx-1 text-white">
                Software Engineer&nbsp;<i class="fab fa-linkedin"></i>
            </a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- MDB -->
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.11/js/mdb.min.js"></script>    
    

    @RenderSection("scripts", required: false)
</body>
</html>
